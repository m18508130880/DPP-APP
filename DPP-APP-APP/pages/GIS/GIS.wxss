.bg_map{
  position: absolute;
  width: 100%;
  height: 91.5%;
}

.map_alert{
  width: 96%;
  left: 2%;
  top: 1%;
	height: 75rpx;
	overflow: hidden;
	margin: auto;
	position: absolute;
  background-color: #FF6347
}
@keyframes anis {
	100% {
	  transform:translateY(-100px)
  }
}
.animate {
  width: 80%;
  left:0%;
  text-align: left;
  color: white;
	animation: anis 10s linear infinite;
  position: absolute;
}
@keyframes flash {
	from {  
    opacity: 0;  
  }  
  to {  
    opacity: 1;  
  }  
}
.flash {
  top: 12rpx;
  width: 20%;
  right: 0%;
  text-align: center;
  color: white;
	animation: flash 0.8s ease-out infinite;
  position: absolute;
}

