<view class='page'>
   <map id="map" class="bg_map" longitude="{{center.lng}}" latitude="{{center.lat}}" markers="{{markers}}" polyline="{{polyline}}" scale="{{scale}}" show-location="true">
    
  </map>
  <block wx:if="{{alert.length>0}}">
    <cover-view bindtap="alert" class="map_alert">
      <cover-view class="animate">
        <block wx:for="{{alert}}" wx:for-index="i" wx:key="">
          <cover-view class="alert">
            [{{alert[i].gJ_Id}}]{{alert[i].des}}
          </cover-view>
        </block>
        <block wx:for="{{alert}}" wx:for-index="i" wx:key="">
          <cover-view class="alert">
            [{{alert[i].gJ_Id}}]{{alert[i].des}}
          </cover-view>
        </block>
      </cover-view>
      <cover-view class="flash">
        {{alert.length}}条
      </cover-view>
    </cover-view>
  </block>
  <!--定位-->
  <cover-image bindtap="positioning" class="location_image" src="../../../image/location.gif"></cover-image>
  <!--回到项目-->
  <cover-image bindtap="project" class="project_image" src="../../../image/project.gif"></cover-image>
  <!--放大-->
  <cover-image bindtap="zoom" id="big" class="big_image" src="../../../image/big.gif"></cover-image>
  <!--缩小-->
  <cover-image bindtap="zoom" id="small" class="small_image" src="../../../image/small.gif"></cover-image>
  <!--工具-->
  <cover-image class="tool_image" src="../../../image/tool.gif"></cover-image>
  <!--数据采集-内部使用-->
  <cover-image class="data_image" src="../../../image/data_collect.gif"></cover-image>

  <!--底部-->
  <cover-view class="map_bottom">
    统     计
  </cover-view>
</view>


