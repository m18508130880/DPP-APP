<!--数据上传-->
  <view class="upload_top">问题反馈</view>
  <view class="table">
    <view class="tr_2">
      <view class="td_21">
        <image bindtap="camera" class="camera" src="../../../image/camera.gif"></image>
      </view>
      <view class="td_22">
        <block wx:for="{{images}}" wx:for-index="i" wx:key="">
          <image bindtap="" class="image" src="https://www.cjsci-tech.com/dpp-app/files/images/{{images[i]}}?new Date()"></image>
        </block>
      </view>
    </view>
    <view class="tr_3">
      <view class="td_31">描述</view>
      <view class="td_32">
        <textarea bindinput="des" maxlength="400" placeholder="问题描述" style="width:100%;height:15rem;" />
      </view>
    </view>
    <view style="text-align:right">
      {{des.length}}/400
    </view>
    <view bindtap="submit" class="submit">
      提交
    </view>
  </view>